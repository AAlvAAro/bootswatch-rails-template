%legend.center Regístrate

.col-md-4.col-md-offset-4
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = general_error_message(resource)

    .well
      %fieldset.form-group
        .col-md-12
          = f.label :email
          = f.email_field :email, autofocus: true, autocomplete: "email", class: field_with_validation(resource, :email)
          = field_error_message(resource, :email)
        .col-md-12
          = f.label :password
          - if @minimum_password_length
            %em
              (mínimo #{@minimum_password_length} caracteres)
          = f.password_field :password, autocomplete: "off", class: field_with_validation(resource, :password)
          = field_error_message(resource, :password)
        .col-md-12
          = f.label :password_confirmation
          = f.password_field :password_confirmation, autocomplete: "off", class: field_with_validation(resource, :password_confirmation)
          = field_error_message(resource, :password_confirmation)
        .col-md-12
          %br
          = f.submit "Regístrate", class: 'btn btn-success'
      = render "devise/shared/links"
